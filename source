-- NEW: Emote Helpers
function playEmote(emote)
    local animId = ({
        dance = "507771019",
        wave = "128777973",
        laugh = "507770818",
        point = "507770453",
        -- Add 320+ from AquaMatrix
    })[emote]
    local anim = Instance.new("Animation")
    anim.AnimationId = "rbxassetid://" .. animId
    local track = LocalPlayer.Character.Humanoid:LoadAnimation(anim)
    track:Play()
end

function copyEmote()
    -- Use Sentinel's copy feature (auto if enabled)
    StarterGui:SetCore("SendNotification", {Title = "Copy"; Text = "Copy enabled in Reanim GUI"; Duration = 2})
end

-- Load Default Tab
loadTabContent("Emotes & Reanim")

-- Notification & Anti-AFK
StarterGui:SetCore("SendNotification", {Title = "MicUpHub v2"; Text = "Loaded w/ Reanim + 320 Emotes!"; Duration = 5})
-- Anti-AFK from previous

print("Mic Up Hub v2 Loaded - Emotes/Reanim Ready!")
