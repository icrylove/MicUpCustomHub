local StarterGui = game:GetService("StarterGui")

-- Globals
getgenv().MicUpHub = {Speed = 16, FlyEnabled = false, NoclipEnabled = false, ReanimEnabled = false}

-- LOAD REANIM, EMOTES, ANIMATOR (Auto)
task.spawn(function()
    -- Sentinel Reanim (Mic Up Specific)
    loadstring(game:HttpGet("https://sentinelxyz.netlify.app/raw.lua"))()
    -- AquaMatrix (320+ Roblox Emotes)
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ExploitFin/AquaMatrix/refs/heads/AquaMatrix/AquaMatrix"))()
    -- Animator (Custom Emotes)
    loadstring(game:HttpGet("https://raw.githubusercontent.com/xhayper/Animator/main/Source/Main.lua"))()
end)

-- GUI Setup
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local CloseBtn = Instance.new("TextButton")
local Tabs = Instance.new("Frame")
local ContentFrame = Instance.new("Frame")

ScreenGui.Name = "MicUpHub"
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.05, 0, 0.05, 0)
MainFrame.Size = UDim2.new(0, 450, 0, 350)
MainFrame.Active = true
MainFrame.Draggable = true

Title.Parent = MainFrame
Title.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
Title.BorderSizePixel = 0
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Font = Enum.Font.GothamBold
Title.Text = "Mic Up Hub v2.0 (Reanim + Emotes)"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 16

CloseBtn.Parent = MainFrame
CloseBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
CloseBtn.BorderSizePixel = 0
CloseBtn.Position = UDim2.new(1, -40, 0, 5)
CloseBtn.Size = UDim2.new(0, 35, 0, 30)
CloseBtn.Font = Enum.Font.GothamBold
CloseBtn.Text = "X"
CloseBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseBtn.TextSize = 16
CloseBtn.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

-- Tab System
local tabs = {"Movement", "Stalls", "Trolls", "Emotes & Reanim"}
for i, tabName in ipairs(tabs) do
    local tabBtn = Instance.new("TextButton")
    tabBtn.Parent = MainFrame
    tabBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    tabBtn.BorderSizePixel = 0
    tabBtn.Position = UDim2.new(0, (i-1)*112, 0, 45)
    tabBtn.Size = UDim2.new(0, 112, 0, 30)
    tabBtn.Font = Enum.Font.Gotham
    tabBtn.Text = tabName
    tabBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    tabBtn.TextSize = 14
    tabBtn.MouseButton1Click:Connect(function()
        StarterGui:SetCore("SendNotification", {Title = "MicUpHub"; Text = tabName .. " Loaded!"; Duration = 2})
        -- Clear & Load Tab Content (Simple Switch)
        for _, child in pairs(ContentFrame:GetChildren()) do child:Destroy() end
        loadTabContent(tabName)
    end)
end

ContentFrame.Parent = MainFrame
ContentFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
ContentFrame.BorderSizePixel = 0
ContentFrame.Position = UDim2.new(0, 10, 0, 85)
ContentFrame.Size = UDim2.new(1, -20, 1, -95)

-- Tab Content Loader
function loadTabContent(tab)
    local yPos = 0
    local function addButton(text, callback)
        local btn = Instance.new("TextButton")
        btn.Parent = ContentFrame
        btn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
        btn.BorderSizePixel = 0
        btn.Position = UDim2.new(0, 10, 0, yPos)
        btn.Size = UDim2.new(1, -20, 0, 35)
        btn.Font = Enum.Font.Gotham
        btn.Text = text
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.TextSize = 14
        btn.MouseButton1Click:Connect(callback)
        yPos = yPos + 40
        return btn
    end

    if tab == "Movement" then
        addButton("Speed Boost (100)", function()
            if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
                LocalPlayer.Character.Humanoid.WalkSpeed = 100
            end
        end)
        addButton("Fly Toggle", function() toggleFly() end)
        addButton("Noclip Toggle", function() toggleNoclip() end)

    elseif tab == "Stalls" then
        addButton("Steal All Stalls", function() stealStalls() end)
        addButton("Clear All Stalls", function() clearStalls() end)
        addButton("Join Private Room", function() joinPrivate() end)

    elseif tab == "Trolls" then
        addButton("Kill All Players", function() killAll() end)
        addButton("Troll Voice (Random)", function() trollVoice() end)

    elseif tab == "Emotes & Reanim" then
        addButton("Toggle Sentinel Reanim (R15/R6)", function()
            getgenv().MicUpHub.ReanimEnabled = not getgenv().MicUpHub.ReanimEnabled
            if getgenv().MicUpHub.ReanimEnabled then
                loadstring(game:HttpGet("https://sentinelxyz.netlify.app/raw.lua"))()
                StarterGui:SetCore("SendNotification", {Title = "Reanim"; Text = "Enabled! Copy Player/Dances"; Duration = 3})
            end
        end)
        addButton("Load All Roblox Emotes (AquaMatrix)", function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/ExploitFin/AquaMatrix/refs/heads/AquaMatrix/AquaMatrix"))()
            StarterGui:SetCore("SendNotification", {Title = "Emotes"; Text = "320+ Loaded! Use /e wave"; Duration = 3})
        end)
        addButton("Custom Emote Loader (Animator)", function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/xhayper/Animator/main/Source/Main.lua"))()
            StarterGui:SetCore("SendNotification", {Title = "Custom"; Text = "GUI Open - Enter Anim ID!"; Duration = 3})
        end)
        addButton("Play Dance1 (/e dance)", function() playEmote("dance") end)
        addButton("Play Wave (/e wave)", function() playEmote("wave") end)
        addButton("Copy Nearest Player Emote", function() copyEmote() end)
        -- Add more: Laugh, Point, Salute, etc.
    end
end

